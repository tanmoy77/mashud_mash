/* 
---------------------------------------------
Digital Clock Style
--------------------------------------------- 
*/

--.time-bar {
	background-color: #7FFF00;
	width:200px;
	height:60px;
	background-position: right bottom;
    background-repeat: no-repeat;
    border-radius: 0px 30px 30px 0px;
	text-align: center;
	justify-content: center;
	padding: 0px 0px 0px 0px;
	font-size:0px;
	color: #0000FF;
}
.time {
    -- background: rgb(12, 12, 12);
	background: #696969;
    color: #fff;
    text-align: center;
    width: 200px;
	height:70px;
	border-radius: 0px 30px 30px 0px;
    -- border: 2px solid rgb(255, 252, 252);
    padding: 3px;
    box-shadow: 0 2px 10px 0 rgba(0,0,0,0.16), 0 2px 10px 0 
    rgba(0,0,0,0.12);
	text-align: center;
}
.hms {
    font-size: 20pt;
    -- font-weight: 25;	
}
.ampm {
    font-size: 15pt;
	padding:5px;
}
.date {
    font-size: 10pt;
	padding:0px;
}